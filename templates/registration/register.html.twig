{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-12 bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-3xl font-semibold text-center mb-6">Inscription</h1>

        {# Affiche les erreurs de formulaire #}
        {% if form_errors(registrationForm) %}
            <div class="mb-4 text-red-600 bg-red-100 border border-red-400 rounded p-3">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        {{ form_start(registrationForm, { 'attr': { 'class': 'space-y-6' } }) }}

            <div>
                <label for="name" class="block text-gray-700 font-medium">Nom</label>
                {{ form_widget(registrationForm.name, {
                    'attr': {
                        'class': 'mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-emerald-500'
                    }
                }) }}
            </div>
        
            <div>
                <label for="email" class="block text-gray-700 font-medium">Email</label>
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'class': 'mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-emerald-500'
                    }
                }) }}
            </div>

            <div>
                <label for="plainPassword" class="block text-gray-700 font-medium">Mot de passe</label>
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-emerald-500'
                    }
                }) }}
            </div>

            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, { 'attr': { 'class': 'mr-2' } }) }}
                <label for="agreeTerms" class="text-gray-600">J'accepte les <a href="#" class="text-emerald-500 hover:underline">conditions générales</a></label>
            </div>

            <button type="submit" class="w-full py-2 px-4 bg-emerald-500 text-white rounded font-semibold hover:bg-emerald-600 transition">S'inscrire</button>

        {{ form_end(registrationForm) }}

        <p class="text-center mt-4 text-gray-600">
            Déjà un compte ? <a href="{{ path('app_login') }}" class="text-emerald-500 hover:underline">Connectez-vous ici</a>.
        </p>
    </div>
{% endblock %}