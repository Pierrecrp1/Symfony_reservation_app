{% extends 'base.html.twig' %}

{% block title %}Créer un Service{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-12 bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-3xl font-semibold text-center mb-6">Créer un Service</h1>

        {{ form_start(form, { 'attr': { 'class': 'space-y-6' } }) }}
            <div>
                {{ form_label(form.name, 'Nom du Service', { 'label_attr': { 'class': 'block text-gray-700 font-medium' } }) }}
                {{ form_widget(form.name, { 'attr': { 'class': 'mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-emerald-500' } }) }}
                {{ form_errors(form.name) }}
            </div>

            <div>
                {{ form_label(form.description, 'Description', { 'label_attr': { 'class': 'block text-gray-700 font-medium' } }) }}
                {{ form_widget(form.description, { 'attr': { 'class': 'mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-emerald-500' } }) }}
                {{ form_errors(form.description) }}
            </div>

            <div>
                {{ form_label(form.price, 'Prix (€)', { 'label_attr': { 'class': 'block text-gray-700 font-medium' } }) }}
                {{ form_widget(form.price, { 'attr': { 'class': 'mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-emerald-500' } }) }}
                {{ form_errors(form.price) }}
            </div>

            <div>
                {{ form_label(form.duration, 'Durée (minutes)', { 'label_attr': { 'class': 'block text-gray-700 font-medium' } }) }}
                {{ form_widget(form.duration, { 'attr': { 'class': 'mt-1 w-full p-2 border border-gray-300 rounded focus:outline-none focus:border-emerald-500' } }) }}
                {{ form_errors(form.duration) }}
            </div>

            <button type="submit" class="w-full py-2 px-4 bg-emerald-500 text-white rounded font-semibold hover:bg-emerald-600 transition">
                Créer le Service
            </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
