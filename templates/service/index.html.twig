{% extends 'base.html.twig' %}

{% block title %}Détail du Service{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-12 bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-3xl font-semibold mb-4">{{ service.name }}</h1>
        <p class="text-gray-700 mb-4">{{ service.description }}</p>
        <p class="text-lg font-semibold mb-2">Prix : {{ service.price }} €</p>
        <p class="text-gray-600">Durée estimée : {{ service.duration }} minutes</p>
        
        <a href="{{ path('booking_choose_date', { 'serviceId': service.id }) }}" class="mt-6 inline-block px-4 py-2 bg-emerald-500 text-white rounded hover:bg-emerald-600 transition">
            Réserver
        </a>
        
        <a href="{{ path('service_list') }}" class="mt-6 inline-block text-emerald-500 hover:underline">Retour à la liste des services</a>
    </div>
{% endblock %}