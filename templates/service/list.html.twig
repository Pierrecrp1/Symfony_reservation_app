{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Services Disponibles</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for service in services %}
            <div class="p-4 border rounded-lg shadow bg-white">
                <h2 class="text-xl font-semibold">{{ service.name }}</h2>
                <p class="text-gray-700">{{ service.description }}</p>
                <p class="mt-2 font-semibold">{{ service.price }} €</p>

                <div class="mt-4 flex space-x-2">
                    <a href="{{ path('service_detail', { 'id': service.id }) }}" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition">Voir Détail</a>
                    <a href="{{ path('booking_choose_date', { 'serviceId': service.id }) }}" class="px-4 py-2 bg-emerald-500 text-white rounded hover:bg-emerald-600 transition">Réserver</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}