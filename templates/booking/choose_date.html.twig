{% extends 'base.html.twig' %}

{% block title %}Choisissez un Jour{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-12 bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-3xl font-semibold mb-4">Choisissez un Jour</h1>

        <form action="{{ path('booking_select_time') }}" method="get">
            <input type="hidden" name="serviceId" value="{{ service.id }}">
            <label for="booking_date" class="block text-gray-700 font-medium mb-2">Sélectionnez un jour</label>
            <input type="date" id="booking_date" name="date" class="input w-full p-2 border rounded" min="{{ 'now'|date('Y-m-d') }}" required>
            
            <button type="submit" class="mt-4 px-4 py-2 bg-emerald-500 text-white rounded hover:bg-emerald-600 transition">
                Voir les créneaux disponibles
            </button>
        </form>
    </div>
{% endblock %}