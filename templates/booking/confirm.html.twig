{% extends 'base.html.twig' %}

{% block title %}Confirmation de Réservation{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-12 bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-3xl font-semibold mb-4">Confirmation de Réservation</h1>

        <p><strong>Service :</strong> {{ service.name }}</p>
        <p><strong>Description :</strong> {{ service.description }}</p>
        <p><strong>Date :</strong> {{ dateTime|date('d/m/Y') }}</p>
        <p><strong>Heure :</strong> {{ dateTime|date('H:i') }}</p>

        <div class="mt-6 flex space-x-4">
            <form action="{{ path('booking_new') }}" method="post">
                <input type="hidden" name="serviceId" value="{{ service.id }}">
                <input type="hidden" name="dateTime" value="{{ dateTime|date('Y-m-d H:i:s') }}">
                <button type="submit" class="px-4 py-2 bg-emerald-500 text-white rounded hover:bg-emerald-600 transition">
                    Confirmer la Réservation
                </button>
            </form>
            
            <a href="{{ path('booking_choose_date', { 'serviceId': service.id }) }}" class="px-4 py-2 bg-gray-500 text-white rounded hover:bg-gray-600 transition">
                Modifier
            </a>
        </div>
    </div>
{% endblock %}